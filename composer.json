{
    "name": "capital-transport/report-manager",
    "description": "Sistema de gestiÃ³n de reportes de transporte con soporte PDF y Excel",
    "type": "project",
    "version": "2.0.0",
    "authors": [
        {
            "name": "Capital Transport LLP",
            "email": "admin@capitaltransport.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-xml": "*",
        "ext-mbstring": "*",
        "phpoffice/phpspreadsheet": "^1.29",
        "smalot/pdfparser": "^2.7",
        "tecnickcom/tcpdf": "^6.6",
        "league/csv": "^9.8",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "CapitalTransport\\": "classes/",
            "CapitalTransport\\Processors\\": "classes/processors/",
            "CapitalTransport\\Models\\": "classes/models/",
            "CapitalTransport\\Utils\\": "classes/utils/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "install-dependencies": "composer install --no-dev --optimize-autoloader",
        "update-dependencies": "composer update --no-dev --optimize-autoloader",
        "clear-cache": "rm -rf vendor/composer/cache/*",
        "test": "phpunit tests/",
        "setup": [
            "@install-dependencies",
            "php scripts/setup-directories.php",
            "php scripts/check-permissions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "tests/",
            "docs/",
            "*.md",
            ".gitignore",
            ".env.example"
        ]
    }
}